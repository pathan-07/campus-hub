rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for the 'events' collection
    match /events/{eventId} {
      // Anyone can read event details.
      allow read: if true;
      
      // Only authenticated users can create new events.
      allow create: if request.auth != null;

      // Only the author of the event can update or delete it.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.authorId;

      // Subcollection for comments on an event
      match /comments/{commentId} {
        // Anyone can read comments.
        allow read: if true;

        // Only authenticated users can create comments.
        allow create: if request.auth != null;

        // Comments cannot be updated or deleted.
        allow update, delete: if false;
      }
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Anyone can read public user profiles (for leaderboards, author names, etc.).
      allow read: if true;

      // A user can only write to (create or update) their own profile document.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
